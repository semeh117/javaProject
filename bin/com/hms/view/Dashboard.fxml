<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.hms.presentation.DashboardController">
	<top>
		<VBox
			style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%);">
			<padding>
				<Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
			</padding>
			<children>
				<Label fx:id="welcomeLabel"
					text="Welcome to Hospital Management System" textFill="WHITE">
					<font>
						<Font name="System Bold" size="20.0" />
					</font>
				</Label>
			</children>
		</VBox>
	</top>

	<center>
		<SplitPane dividerPositions="0.4" orientation="HORIZONTAL">
			<items>
				<!-- Left Panel: Patient Form -->
				<VBox spacing="10.0" style="-fx-background-color: #f5f5f5;">
					<padding>
						<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
					</padding>
					<children>
						<Label text="Patient Information"
							style="-fx-font-weight: bold; -fx-font-size: 16;">
							<font>
								<Font name="System Bold" size="16.0" />
							</font>
						</Label>

						<GridPane hgap="10.0" vgap="10.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES"
									minWidth="100.0" prefWidth="120.0" />
								<ColumnConstraints hgrow="ALWAYS"
									minWidth="200.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="30.0"
									prefHeight="30.0" />
								<RowConstraints minHeight="30.0"
									prefHeight="30.0" />
								<RowConstraints minHeight="30.0"
									prefHeight="30.0" />
								<RowConstraints minHeight="30.0"
									prefHeight="30.0" />
								<RowConstraints minHeight="30.0"
									prefHeight="30.0" />
								<RowConstraints minHeight="30.0"
									prefHeight="30.0" />
								<RowConstraints minHeight="80.0"
									prefHeight="80.0" />
								<RowConstraints minHeight="30.0"
									prefHeight="30.0" />
								<RowConstraints minHeight="30.0"
									prefHeight="30.0" />
								<RowConstraints minHeight="30.0"
									prefHeight="30.0" />
							</rowConstraints>
							<children>
								<Label text="First Name:" GridPane.columnIndex="0"
									GridPane.rowIndex="0" />
								<TextField fx:id="firstNameField"
									GridPane.columnIndex="1" GridPane.rowIndex="0" />

								<Label text="Last Name:" GridPane.columnIndex="0"
									GridPane.rowIndex="1" />
								<TextField fx:id="lastNameField"
									GridPane.columnIndex="1" GridPane.rowIndex="1" />

								<Label text="Date of Birth:" GridPane.columnIndex="0"
									GridPane.rowIndex="2" />
								<DatePicker fx:id="dateOfBirthPicker"
									GridPane.columnIndex="1" GridPane.rowIndex="2" />

								<Label text="Gender:" GridPane.columnIndex="0"
									GridPane.rowIndex="3" />
								<ComboBox fx:id="genderComboBox" prefWidth="150.0"
									GridPane.columnIndex="1" GridPane.rowIndex="3" />

								<Label text="Phone:" GridPane.columnIndex="0"
									GridPane.rowIndex="4" />
								<TextField fx:id="phoneField" GridPane.columnIndex="1"
									GridPane.rowIndex="4" />

								<Label text="Email:" GridPane.columnIndex="0"
									GridPane.rowIndex="5" />
								<TextField fx:id="emailField" GridPane.columnIndex="1"
									GridPane.rowIndex="5" />

								<Label text="Address:" GridPane.columnIndex="0"
									GridPane.rowIndex="6" />
								<TextArea fx:id="addressArea" prefRowCount="3"
									wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="6" />

								<Label text="Emergency Contact:" GridPane.columnIndex="0"
									GridPane.rowIndex="7" />
								<TextField fx:id="emergencyContactField"
									GridPane.columnIndex="1" GridPane.rowIndex="7" />

								<Label text="Emergency Phone:" GridPane.columnIndex="0"
									GridPane.rowIndex="8" />
								<TextField fx:id="emergencyPhoneField"
									GridPane.columnIndex="1" GridPane.rowIndex="8" />

								<Label text="Blood Type:" GridPane.columnIndex="0"
									GridPane.rowIndex="9" />
								<TextField fx:id="bloodTypeField"
									GridPane.columnIndex="1" GridPane.rowIndex="9" />
							</children>
						</GridPane>

						<HBox spacing="10.0">
							<children>
								<Button fx:id="addPatientButton" mnemonicParsing="false"
									onAction="#handleAddPatient" prefWidth="100.0"
									style="-fx-background-color: #27ae60; -fx-text-fill: white;"
									text="Add" />
								<Button fx:id="updatePatientButton"
									mnemonicParsing="false" onAction="#handleUpdatePatient"
									prefWidth="100.0"
									style="-fx-background-color: #3498db; -fx-text-fill: white;"
									text="Update" />
								<Button fx:id="deletePatientButton"
									mnemonicParsing="false" onAction="#handleDeletePatient"
									prefWidth="100.0"
									style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
									text="Delete" />
								<Button fx:id="refreshButton" mnemonicParsing="false"
									onAction="#handleRefresh" prefWidth="100.0"
									style="-fx-background-color: #95a5a6; -fx-text-fill: white;"
									text="Refresh" />
							</children>
						</HBox>
					</children>
				</VBox>

				<!-- Right Panel: Patient List -->
				<VBox spacing="10.0">
					<padding>
						<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
					</padding>
					<children>
						<HBox spacing="10.0" alignment="CENTER_LEFT">
							<children>
								<Label text="Search:" />
								<TextField fx:id="searchField" prefWidth="200.0"
									promptText="Search by name..." />
								<Button fx:id="searchButton" mnemonicParsing="false"
									onAction="#handleSearch" text="Search" />
								<Label text="Filter by Age:" />
								<ComboBox fx:id="filterAgeComboBox" prefWidth="150.0" />
							</children>
						</HBox>

						<TableView fx:id="patientTable" prefHeight="600.0">
							<columns>
								<TableColumn fx:id="idColumn" prefWidth="60.0"
									text="ID" />
								<TableColumn fx:id="firstNameColumn"
									prefWidth="120.0" text="First Name" />
								<TableColumn fx:id="lastNameColumn"
									prefWidth="120.0" text="Last Name" />
								<TableColumn fx:id="ageColumn" prefWidth="60.0"
									text="Age" />
								<TableColumn fx:id="genderColumn" prefWidth="80.0"
									text="Gender" />
								<TableColumn fx:id="phoneColumn" prefWidth="120.0"
									text="Phone" />
								<TableColumn fx:id="emailColumn" prefWidth="200.0"
									text="Email" />
							</columns>
						</TableView>
					</children>
				</VBox>
			</items>
		</SplitPane>
	</center>
</BorderPane>

