<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hms.presentation.LoginController"
            prefWidth="400" prefHeight="300">

<VBox alignment="CENTER"
      spacing="15"
      AnchorPane.topAnchor="0"
      AnchorPane.bottomAnchor="0"
      AnchorPane.leftAnchor="0"
      AnchorPane.rightAnchor="0"
      style="-fx-background-color: white; -fx-padding: 30; -fx-spacing: 15; -fx-background-radius: 10;">

    <Label text="Hospital Management System"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="emailField" promptText="Email or Username"/>

    <PasswordField fx:id="passwordField" promptText="Password"/>

    <Label fx:id="errorLabel"
           text=""
           visible="false"
           style="-fx-text-fill: red; -fx-font-weight: bold;"/>

    <Button text="Login"
            onAction="#handleLogin"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15 8 15;"/>

</VBox>

</AnchorPane>

