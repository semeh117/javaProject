<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hms.presentation.LoginController">
   <center>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <Label text="Hospital Management System" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            <Label text="Login to Continue" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            
            <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 10; -fx-padding: 30;">
               <padding>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Username" />
                  <TextField fx:id="usernameField" promptText="Enter username" prefWidth="300.0" />
                  
                  <Label text="Password" />
                  <PasswordField fx:id="passwordField" promptText="Enter password" prefWidth="300.0" />
                  
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefWidth="120.0" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold;" text="Login" />
                        <Button fx:id="cancelButton" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Cancel" />
                     </children>
                  </HBox>
                  
                  <Label text="Default: admin / admin123" textFill="GRAY" />
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>

