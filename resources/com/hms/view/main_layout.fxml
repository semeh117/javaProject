<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainLayout" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hms.presentation.MainLayoutController">
    <left>
        <VBox spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label text="HMS" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </Label>
            <Button maxWidth="Infinity" onAction="#showDashboard" styleClass="nav-button" text="Dashboard" />
            <Button maxWidth="Infinity" onAction="#showPatients" styleClass="nav-button" text="Patients" />
            <Button maxWidth="Infinity" onAction="#showAppointments" styleClass="nav-button" text="Appointments" />
            <Button maxWidth="Infinity" onAction="#showStaff" styleClass="nav-button" text="Staff" />
            <Region VBox.vgrow="ALWAYS" />
            <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="nav-button-danger" text="Logout" />
        </VBox>
    </left>
</BorderPane>
